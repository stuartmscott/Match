java_jar(
  name = "Echo"
  source = get_files("source"))

java_jar(
  name = "EchoTest"
  source = get_files("tests/source")
  library = [
    "Echo"
    "junit"
  ])

java_junit(
  name = "EchoTestResult"
  test_jar = "EchoTest"
  target_jar = "Echo"
  main_class = "main.AllTests")

java_run(
  jar = "Echo"
  input = "Hello, World")
