set(
    name = "junit"
    value = "libraries/junit-4.12.jar"
)
set(
    name = "hamcrest"
    value = "libraries/hamcrest-core-1.3.jar"
)
set(
    name = "mockito"
    value = "libraries/mockito-all-1.10.19.jar"
)

java_jar(
    name = "Echo"
    source = find("source")
    main_class = "main.Echo"
)

java_jar(
    name = "EchoTest"
    source = find("tests/source")
    main_class = "main.EchoTest"
    library = [
        "Echo"
        "junit"
    ]
)

java_junit(
    name = "EchoTestResult"
    library = [
        "EchoTest"
        "Echo"
    ]
    main_class = "main.EchoTest"
)